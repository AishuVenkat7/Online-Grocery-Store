<p style="color: green"><%= notice %></p>

<h2>Search Orders by Email</h2>

<div class="form-container">
<%= form_tag(orders_path, method: :get) do %>
  <div class="form-group">
    <%= label_tag 'email', 'Email:', class: "form-label" %>
    <%= text_field_tag 'email', nil, class: "form-input" %>
  </div>
  <%= submit_tag 'Search orders', class: 'btn-primary' %>
<% end %>
</div>

<% if @orders.present? %>
<div id="orders">
  <% @orders.each do |order| %>
  <% puts "inside index html"%>
    <%= render order %>
    <p>
      <%= link_to "Show this order", order %>
    </p>
  <% end %>
</div>
<% end %>
